<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.humeniuk.domain.Person" table="person" schema="" catalog="on_wheels_db">
        <id name="idPerson">
            <column name="id_person" sql-type="int unsigned" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" length="45" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar" length="100" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar" length="13"/>
        </property>
        <property name="idAdress">
            <column name="id_adress" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>